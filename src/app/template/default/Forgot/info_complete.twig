{% extends 'default_frame.twig' %}

{% set body_class = 'registration_page' %}

{% block main %}
    <div class="ec-role">
        <div class="ec-pageHeader">
            <h1>{{ '本人認証情報入力'|trans }}</h1>
        </div>
    </div>
    <div class="ec-registerCompleteRole">
        <div class="ec-off2Grid">
            <div class="ec-off2Grid__cell">
                <p class="ec-reportDescription">{{ '本URLに紐づくメールアドレスは認証済みです。
                下記のボタンよりログインし、弁済にお進みください。
                '|trans|nl2br }}</p>
                <div class="ec-off4Grid">
                    <div class="ec-off4Grid__cell"><a class="ec-blockBtn--action" href="{{ url('mypage_login') }}">{{ 'ログイン画面へ進む'|trans }}</a></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
