{% extends 'default_frame.twig' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% block javascript %}
    <script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>
{% endblock javascript %}

{% block main %}

    <div class="ec-pageHeader">
        {% if is_mobile %}
            <h1>{{ '弁済情報通知用
            メールアドレス確認'|trans|nl2br }}</h1>
        {% else %}
            <h1>{{ '弁済情報通知用メールアドレス確認'|trans }}</h1>
        {% endif %}
    </div>
    <div class="ec-contactRole">
        <div class="ec-off3Grid">
            <div class="ec-off3Grid__cell">
                <form method="post" action="{{ url('contact_repay') }}" class="h-adr" novalidate>
                    <span class="p-country-name" style="display:none;">Japan</span>
                    {{ form_widget(form._token) }}
                    <p class="ec-para-normal">{{ 'ご入力いただいたメールアドレスに弁済いただく、タブレットもしくは付属品のご案内を差し上げます。下記入力フォームに送受信可能なメールアドレスを入力いただき、送信してください。学校側から共有いただく、氏名などの情報と照合し、追って通知させていただきます。
                    '|trans|nl2br }}</p>
                    <div class="ec-borderedDefs-repay">
                        <dl>
                            <dt class="repay">
                                {{ form_label(form.name, '保護者氏名', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd class="repay">
                                <div class="ec-input{{ has_errors(form.name.name01, form.name.name02) ? ' error' }}">
                                    {{ form_widget(form.name.name01, {'attr': { 'placeholder': '' }}) }}
                                    {{ form_errors(form.name.name01) }}
                                </div>
                            </dd>
                        </dl>
                        
                        <dl>
                            <dt class="repay">
                                {{ form_label(form.email, 'メールアドレス', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd class="repay">
                                <div class="ec-input{{ has_errors(form.email.first) ? ' error' }}">
                                    {{ form_widget(form.email.first, { 'attr': { 'placeholder': '' }}) }}
                                    {{ form_errors(form.email.first) }}
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt class="repay">
                                {{ form_label(form.email_confirm, 'メールアドレス確認用', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd class="repay">
                                <div class="ec-input{{ has_errors(form.email.second) ? ' error' }}">
                                    {{ form_widget(form.email.second, { 'attr': { 'placeholder': '' }}) }}
                                    {{ form_errors(form.email.second) }}
                                </div>
                            </dd>
                        </dl>
                        {# エンティティ拡張の自動出力 #}
                        {% for f in form|filter(f => f.vars.eccube_form_options.auto_render) %}
                            {% if f.vars.eccube_form_options.form_theme %}
                                {% form_theme f f.vars.eccube_form_options.form_theme %}
                                {{ form_row(f) }}
                            {% else %}
                                <dl>
                                    <dt>
                                        {% set label_class =  f.vars.label_attr.class is defined ? f.vars.label_attr.class : '' %}
                                        {{ form_label(f, f.vars.label, { 'label_attr': {'class': label_class ~ ' ec-label' }}) }}
                                    </dt>
                                    <dd>
                                        <div class="{{ f.vars.eccube_form_options.style_class }}{{ has_errors(f) ? ' error' }}">
                                            {{ form_widget(f) }}
                                            {{ form_errors(f) }}
                                        </div>
                                    </dd>
                                </dl>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="ec-ContactRole__actions">
                        <div class="ec-off4Grid">
                            <div class="ec-off4Grid__cell">
                                <button type="submit" class="ec-blockBtn--action" name="mode" value="confirm">{{ '送信'|trans }}
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
