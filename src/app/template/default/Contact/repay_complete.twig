            {% if is_mobile %}
                <h1>{{ '弁済情報通知用
                メールアドレス確認(完了)'|trans|nl2br }}</h1>
            {% else %}
                <h1>{{ '弁済情報通知用メールアドレス確認(完了)'|trans }}</h1>
            {% endif %}
        </div>
    </div>
