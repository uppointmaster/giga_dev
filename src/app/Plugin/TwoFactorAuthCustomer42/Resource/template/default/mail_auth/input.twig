{% extends 'default_frame.twig' %}

{% set body_class = 'mypage' %}

{% block stylesheet %}
    <style>
        .ec-login-header {
            background: #FFFFFF;
        }

        .ec-login-header > p {
            text-align: center;
            font: var(--unnamed-font-style-normal) normal medium 16px/22px YuGothic;
            letter-spacing: var(--unnamed-character-spacing-0);
            text-align: center;
            font: normal normal medium 16px/22px YuGothic;
            letter-spacing: 0px;
            color: #525263;
            opacity: 1;
        }
    </style>
{% endblock %}


{% block main %}
    <div class="ec-pageHeader">
        <h1>{{ '認証コード入力'|trans }}</h1>
    </div>
    <div class="ec-role">    
        <div class="ec-off2Grid">
            <div class="ec-off2Grid__cell">
                <form name="input_onetime" id="input_onetime" method="post"
                      action="{{ url('plg_customer_2fa_mail_auth_input_onetime', {'secret_key': secret_key} ) }}">
                    {% if app.session.flashBag.has('eccube.login.target.path') %}
                        {% for targetPath in app.session.flashBag.peek('eccube.login.target.path') %}
                            <input type="hidden" name="_target_path" value="{{ targetPath }}"/>
                        {% endfor %}
                    {% endif %}
                    <div class="ec-reportDescription">
                        <p>{{ 'メールアドレスに届いた認証コードを入力後、「認証して弁済内容を見る」ボタンを押して認証を完了し、弁済内容をご確認ください。
                        '|trans|nl2br }}</p>
                    </div>
                    <div class="ec-borderedDefs-repay">
                        <dl>
                            <dt>
                                {{ form_label(form.one_time_token, '本人認証番号', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd>
                                <div class="ec-input{{ has_errors(form.one_time_token) ? ' error' }}">
                                    {{ form_widget(form.one_time_token) }}
                                    {% if error %}
                                        <p class="ec-errorMessage">{{ error|nl2br }}</p>
                                    {% endif %}
                                </div>
                                <div class="ec-login__link" align="right"><a class="ec-link"
                                    href="{{ url('plg_customer_2fa_mail_auth_send_onetime', {'secret_key': secret_key} ) }}">{{ '本人認証番号を再度取得する >'|trans }}</a>
                                </div>
                            </dd>
                        </dl>
                    </div>
                    <div class="ec-off4Grid">
                        <div class="ec-off4Grid__cell">
                            <button type="submit"
                                    class="ec-blockBtn--action">{{ '認証して弁済内容を見る'|trans }}</button>
                        </div>
                    </div>
                    {{ form_widget(form._token) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
